<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvName" />

    <TextView
        android:text="Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_alignParentStart="true"
        android:id="@+id/tvText" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLikes"
        android:id="@+id/commentContainer"></FrameLayout>


    <CheckBox
        android:text="Like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvText"
        android:layout_alignParentStart="true"
        android:id="@+id/likeBox"/>

    <CheckBox
        android:text="Dislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dislikeBox"
        android:layout_alignBaseline="@+id/likeBox"
        android:layout_toEndOf="@+id/likeBox" />

    <Button
        android:text="Comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/commentButton"
        android:layout_alignBaseline="@+id/likeBox"
        android:layout_toEndOf="@+id/dislikeBox" />

    <TextView
        android:text="Likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/likeBox"
        android:layout_alignParentStart="true"
        android:id="@+id/tvLikes" />

    <TextView
        android:text="Dislikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tvLikes"
        android:layout_alignBaseline="@+id/tvLikes"
        android:id="@+id/tvDislikes" />

</RelativeLayout>
